const mongoose = require("mongoose");

const userWarningsSchema = new mongoose.Schema({
  userId: { type: mongoose.Schema.Types.ObjectId, required: true, unique: true, ref: "User" },

  // Cada chave representa uma flag vis√≠vel, mapeando para o campo da collection avisos
  isEmailCheck: { type: String, default: "" },
  introTip: { type: String, default: "" }

  });

module.exports = mongoose.model("UserWarnings", userWarningsSchema);
